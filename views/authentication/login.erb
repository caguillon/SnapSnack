<div id="sign" class="row justify-content-md-center mt-5">
	<div class="card" style="width: 36rem; border-color:#E10580; border-width: .3rem">
  		<div class="card-body">
  		<center>
  			<img src="https://www.practicepanther.com/wp-content/uploads/2017/02/user.png" width="150" height="150">
  			<h5 class="card-title" style="font-size: 45px; color:#41369F">Login</h5>
  		</center>
			
		
			<form action="/process_login" method="POST">
			<div class="form-group">
				<label for="exampleInputEmail1">Email</label>
				<input type="textbox" class="form-control" name="email" required aria-describedby="emailHelp" placeholder="Email">
			</div>
			<div class="form-group">
				<label for="exampleInputPassword1">Password</label>
				<input type="password" class="form-control" name="password" required placeholder="Password">
			</div>
			<button type="submit" class="btn btn-primary" style="background-color:#41369F">Login</button>
			</form>
		</div>
	</div>
</div>
