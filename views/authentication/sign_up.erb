<div id="sign" class="row justify-content-md-center mt-5">
	<div class="card" style="width: 36rem; border-color:#E10580; border-width: .3rem"">
  		<div class="card-body">
  			<center>
  				<img src="https://vrtize.com/wp-content/uploads/2016/08/new-account-icon-256x256.png" width="150" height="150">
				<h5 class="card-title" style="font-size: 45px; color:#41369F">Sign Up</h5>
			</center>

			<form action="/register" method="POST">
			<div class="form-group">
				<label for="exampleInputEmail1">First Name</label>
				<input type="textbox" class="form-control" name="fname" required aria-describedby="emailHelp" placeholder="First Name">
			</div>
			<div class="form-group">
				<label for="exampleInputEmail1">Last Name</label>
				<input type="textbox" class="form-control" name="lname" required aria-describedby="emailHelp" placeholder="Last Name">
			</div>
			<div class="form-group">
				<label for="exampleInputEmail1">Email</label>
				<input type="textbox" class="form-control" name="email" required aria-describedby="emailHelp" placeholder="Email">
			</div>
			<div class="form-group">
				<label for="exampleInputPassword1">Password</label>
				<input type="password" class="form-control" name="password" required placeholder="Password">
			</div>
			<button type="submit" class="btn btn-primary" style="background-color:#41369F">Sign Up</button>
			</form>
		</div>
	</div>
</div>
